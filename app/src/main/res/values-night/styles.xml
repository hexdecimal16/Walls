<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/silver</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">@color/brown</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="colorOnBackground">#212121</item>
        <item name="textColorTitle">@color/brown</item>
        <item name="textColorTitle2">@color/white</item>
        <item name="textColorDescription">@color/silver</item>
        <item name="animationTint">@color/brown</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="TextHeading">
        <item name="android:textColor">?textColorTitle</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="TextSubHeading">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">@dimen/text_sub_heading</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="TextHeading2">
        <item name="android:textColor">?textColorTitle2</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">@dimen/text_heading2</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>


</resources>